datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model PortfolioItem {
  id             Int        @id @default(autoincrement())
  description    String
  homeImage      Image      @relation(name: "HomeImageId", fields: [homeImageId], references: [id])
  primaryImage   Image      @relation(name: "PrimaryImageId", fields: [primaryImageId], references: [id])
  projectId      String     @unique
  name           String     @unique
  images         Image[]
  categories     Category[]
  links          Link[]
  products       Product[]
  homeImageId    Int
  primaryImageId Int
}

model Link {
  id            Int             @id @default(autoincrement())
  isInternal    Boolean
  label         String
  url           String          @unique
  type          LinkType        @relation(fields: [linkTypeId], references: [id])
  PortfolioItem PortfolioItem[]
  linkTypeId    Int
}

model LinkType {
  id   Int    @id @default(autoincrement())
  name String @unique
  Link Link[]
}

model Image {
  id                          Int             @id @default(autoincrement())
  url                         String          @unique
  primaryImagesPortfolioItems PortfolioItem[] @relation("PrimaryImageId")
  homeImagesPortfolioItems    PortfolioItem[] @relation("HomeImageId")
  PortfolioItem               PortfolioItem[]
}

model Category {
  id            Int             @id @default(autoincrement())
  name          String          @unique
  PortfolioItem PortfolioItem[]
}

model Product {
  id            Int             @id @default(autoincrement())
  name          String          @unique
  PortfolioItem PortfolioItem[]
}
